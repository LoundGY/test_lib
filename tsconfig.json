{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2019",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2019",
      "dom"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@tps/dynamic-simplifier-services": [
        "projects/dynamic-simplifier-services/*"
      ],
      "@tps/dynamic-simplifier-dtos": [
        "projects/dynamic-simplifier-dtos/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictTemplates": true,
    "strictInputAccessModifiers": false
  }
}
